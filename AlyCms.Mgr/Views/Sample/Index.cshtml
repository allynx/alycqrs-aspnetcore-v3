@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Sample manage</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>

    <div class="layui-fluid">
        <div class="layui-card">
            <div class="layui-form layui-card-header aly-card-header-auto">
                <h1>Sample manage</h1>
            </div>

            <div class="layui-card-body">
                <script type="text/html" id="table_toolbar">
                    <div class="layui-btn-container">
                        <button class="layui-btn  layui-btn-sm layui-btn-danger" lay-event="batchdel">禁用</button>
                        <button class="layui-btn  layui-btn-sm layui-btn-normal" lay-event="add">添加</button>
                    </div>
                </script>
                <table id="aly_app_content_list" lay-filter="aly_app_content_list"></table>
                <script type="text/template" id="btn_tpl">
                    <input class="layui-disabled" type="checkbox"  lay-skin="switch" lay-text="是|否" {{ d.disable? 'checked':'' }} disabled>
                </script>
                <script type="text/template" id="table_tool">
                    <a class="layui-btn layui-btn-normal layui-btn-xs" lay-event="edit"><i class="layui-icon layui-icon-edit"></i>编辑 </a>
                    <a class="layui-btn layui-btn-danger layui-btn-xs {{ d.disable? 'layui-btn-disabled layui-disabled':'' }}" lay-event="del"><i class="layui-icon layui-icon-delete"></i>禁用</a>
                </script>
            </div>
        </div>
    </div>

    <div style="height: 0px; width:0px; overflow: hidden">
        <div class="layui-layer-wrap layui-form" lay-filter="aly-app-form-list" id="editor_windows" style="padding: 20px 30px 0 0;">
            <div class="layui-form-item">
                <label class="layui-form-label">ID</label>
                <div class="layui-input-inline">
                    <input v-model="id" disabled="disabled" lay-filter="id" type="text" name="id" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">标题</label>
                <div class="layui-input-inline">
                    <input v-model="title" type="text" name="title" lay-filter="title" lay-verify="required" placeholder="请输入标题" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">禁用</label>
                <div class="layui-input-inline">
                    <tl-checkbox name="disable" skin="switch" v-model="disable" v-bind:disable="false" v-bind:tip="['是','否']"></tl-checkbox>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/layui/layui.js"></script>

    <script type="text/javascript">
        layui.extend({ sample: 'js/sample' }).use(['sample']);
    </script>
</body>
</html>
